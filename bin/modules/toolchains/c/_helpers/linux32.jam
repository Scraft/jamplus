if $(C.COMPILER) {
	C.ToolchainHelper $(C.COMPILER)-autodetect ;

	if ! [ C.AutoDetect ] {
		Exit * Unable to detect $(C.COMPILER) compiler. ;
	}
} else {
	C.ToolchainHelper gcc-autodetect ;
	if ! [ C.AutoDetect ] {
		Exit * Unable to detect gcc compiler. ;
	}
}

C.ToolchainHelper $(C.COMPILER_SUITE)-$(C.PLATFORM)-$(C.CONFIG) : optional ;

