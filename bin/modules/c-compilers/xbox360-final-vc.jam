# Uncomment to get LTCG.

#LINK_TIME_CODE_GENERATION_COMPILE_FLAGS	= /GL ;
#LINK_TIME_CODE_GENERATION_LIBRARY_FLAGS	= /LTCG ;
#LINK_TIME_CODE_GENERATION_EXE_FLAGS		= /LTCG ;

C.CFlags *		: /O2 /Oi /EHsc /Gy /MT /W3 /Zi $(LINK_TIME_CODE_GENERATION_COMPILE_FLAGS) : final : xbox360 ;
C.C++Flags * 	: /O2 /Oi /EHsc /Gy /MT /W3 /Zi $(LINK_TIME_CODE_GENERATION_COMPILE_FLAGS) : final : xbox360 ;
C.LibFlags *	: $(LINK_TIME_CODE_GENERATION_LIBRARY_FLAGS) : final : win32 ;
C.LinkFlags *	: /INCREMENTAL:NO /DEBUG /OPT:REF /OPT:ICF $(LINK_TIME_CODE_GENERATION_EXE_FLAGS) : final : xbox360 ;

VSCONFIGMAP.final = "Final" ;
