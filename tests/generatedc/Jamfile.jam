SubDir TOP ;

actions GenerateCFile {
	copy $(2:C) $(1:C)
}

C.ActiveTarget helloworld ;

local file.c = @(file.c:G=$(C.ACTIVE_TOOLCHAIN_SUBTARGET)) ;
local file.txt = @(file.txt:G=$(C.ACTIVE_TOOLCHAIN_SUBTARGET)) ;

Depends $(file.c) : $(file.txt) ;
SEARCH on $(file.txt) = $(SUBDIR) ;
GenerateCFile $(file.c) : $(file.txt) ;
Clean clean:helloworld : $(file.c) ;

C.Application main.c file.c ;

